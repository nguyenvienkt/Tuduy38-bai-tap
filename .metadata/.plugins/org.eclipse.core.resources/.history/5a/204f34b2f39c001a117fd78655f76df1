import java.util.Scanner;

public class TinhTienLuongNhanVien {

	public static void main(String[] args) {
		// Code đầu vào
		int ngayLuong = 100000;
		Scanner soNgayDiLam = new Scanner(System.in);		
		System.out.println("Số ngày nhân viên đi làm là: ");
		
		// Code xử lý
		double tongLuong = soNgayDiLam.nextDouble()*ngayLuong;
		
		// Code xuất
		System.out.println("Tiền lương nhân viên là: " + (tongLuong));

	}

}
